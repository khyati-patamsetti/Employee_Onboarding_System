{
  "swagger": "2.0",
  "info": {
    "title": "HR Employee Service",
    "version": "1.0.0"
  },
  "host": "mocki.io",
  "basePath": "/v1",
  "schemes": ["https"],
  "paths": {
    "/employees": {
      "get": {
        "summary": "Get Employees",
        "responses": {
          "200": {
            "description": "List of employees",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "firstName": { "type": "string" },
                  "lastName": { "type": "string" },
                  "email": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  }
}
